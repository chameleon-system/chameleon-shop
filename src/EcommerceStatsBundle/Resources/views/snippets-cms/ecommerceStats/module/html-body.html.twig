{#
    @var ChameleonSystem\EcommerceStatsBundle\Service\EcommerceStatsGroup group
#}

{% set groupData = group.groupData %}

<tr>
    <th rowspan="{{ groupData.rowCount }}">{{ groupData.groupTitle }}</th>

    {% set emptyGroups = groupData.maxGroupDepth - level %}

    {% if emptyGroups > 0 %}
        {% for i in 1..emptyGroups %}
            <th>{{ 'chameleon_system_ecommerce_stats.total' | trans }}</th>
        {% endfor %}
    {% endif %}

    {% set oldVal = 0 %}
    {% for name in groupData.columnNames %}
        {% set newVal = groupData.groupTotals[name] ?: 0 %}
        <td>{{ newVal | format_number(2) }}</td>
        {% set diff = newVal - oldVal %}
        {% if showDiffColumn %}
            <td>{{ diff | format_number(2) }}</td>
        {% endif %}
        {% set oldVal = newVal %}
    {% endfor %}
</tr>
{% for subGroup in groupData.subGroups %}
    {% include '@ChameleonSystemEcommerceStats/snippets-cms/ecommerceStats/module/html-body.html.twig' with {group: subGroup, level: level + 1} %}
{% endfor %}
