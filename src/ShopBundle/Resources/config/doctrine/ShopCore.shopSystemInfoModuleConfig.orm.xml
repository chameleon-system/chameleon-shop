<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopBundle\Entity\ShopCore\shopSystemInfoModuleConfig" table="shop_system_info_module_config">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <many-to-one field="CmsTplModuleInstance" target-entity="\ChameleonSystem\DataAccessBundle\Entity\CorePagedef\cmsTplModuleInstance">
    <join-column name="cms_tpl_module_instance_id" referenced-column-name="id" />
    <options>
        <option name="comment">Belongs to module instance</option>
    </options>
</many-to-one>
            <field name="Name" type="string" column="name" length="255" nullable="false" >
    <options>
        <option name="comment">Optional title</option>
        <option name="default"></option>    </options>
</field>
            <field name="Intro" type="text" column="intro" nullable="false" >
    <options>
        <option name="comment">Optional introduction text</option>
            </options>
</field>
            <many-to-many field="ShopSystemInfoCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopCore\shopSystemInfo">
    <join-table name="shop_system_info_module_config_shop_system_info_mlt">
        <join-columns>
            <join-column name="source_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
            <join-column name="target_id" referenced-column-name="id"/>
        </inverse-join-columns>
    </join-table>
    <options>
        <option name="comment">Shop info pages to be displayed</option>
    </options>
</many-to-many>
                <lifecycle-callbacks>
                                                                                                                                    </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>