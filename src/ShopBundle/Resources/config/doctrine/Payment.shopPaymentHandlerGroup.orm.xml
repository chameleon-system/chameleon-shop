<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopBundle\Entity\Payment\shopPaymentHandlerGroup" table="shop_payment_handler_group">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <field name="Classname" type="string" column="classname" length="255" nullable="false" >
    <options>
        <option name="comment">Overwrite Tdb with this class</option>
        <option name="default"></option>    </options>
</field>
            <one-to-many field="ShopPaymentHandlerGroupConfigCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\Payment\shopPaymentHandlerGroupConfig" mapped-by="ShopPaymentHandlerGroup" orphan-removal="true">
    <options>
        <option name="comment">Configuration</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <field name="IpnGroupIdentifier" type="string" column="ipn_group_identifier" length="255" nullable="false" >
    <options>
        <option name="comment">IPN Identifier</option>
        <option name="default"></option>    </options>
</field>
            <field name="IpnPayloadCharacterCharset" type="string" column="ipn_payload_character_charset" length="255" nullable="false" >
    <options>
        <option name="comment">Character encoding of data transmitted by the provider</option>
        <option name="default"></option>    </options>
</field>
            <one-to-many field="PkgShopPaymentIpnStatusCollection" target-entity="\ChameleonSystem\ShopPaymentIPNBundle\Entity\pkgShopPaymentIpnStatus" mapped-by="ShopPaymentHandlerGroup" orphan-removal="true">
    <options>
        <option name="comment">IPN status codes</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <field name="Name" type="string" column="name" length="255" nullable="false" >
    <options>
        <option name="comment">Name</option>
        <option name="default"></option>    </options>
</field>
            <field name="SystemName" type="string" column="system_name" length="255" nullable="false" >
    <options>
        <option name="comment">System name</option>
        <option name="default"></option>    </options>
</field>
            <field name="Description" type="text" column="description" nullable="false" >
    <options>
        <option name="comment">Description</option>
            </options>
</field>
            <one-to-many field="ShopPaymentHandlerCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\Payment\shopPaymentHandler" mapped-by="ShopPaymentHandlerGroup" orphan-removal="true">
    <options>
        <option name="comment">Payment handler</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <one-to-many field="ShopPaymentMethodCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\Payment\shopPaymentMethod" mapped-by="ShopPaymentHandlerGroup" orphan-removal="true">
    <options>
        <option name="comment">Payment methods</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <field name="IpnAllowedIps" type="text" column="ipn_allowed_ips" nullable="false" >
    <options>
        <option name="comment">IPN may come from the following IP</option>
            </options>
</field>
            <one-to-many field="PkgShopPaymentIpnTriggerCollection" target-entity="\ChameleonSystem\ShopPaymentIPNBundle\Entity\pkgShopPaymentIpnTrigger" mapped-by="ShopPaymentHandlerGroup" orphan-removal="true">
    <options>
        <option name="comment">Redirections</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <one-to-many field="PkgShopPaymentIpnMessageCollection" target-entity="\ChameleonSystem\ShopPaymentIPNBundle\Entity\pkgShopPaymentIpnMessage" mapped-by="ShopPaymentHandlerGroup" orphan-removal="true">
    <options>
        <option name="comment">IPN messages</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <field name="Environment" type="string" column="environment" length="10" nullable="false" >
    <options>
        <option name="fixed">true</option>
        <option name="comment">Environment</option>
        <option name="default">default</option>    </options>
</field>
                <lifecycle-callbacks>
                                                                                                                                                                                                                                                                                                                                                                                                                            </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>