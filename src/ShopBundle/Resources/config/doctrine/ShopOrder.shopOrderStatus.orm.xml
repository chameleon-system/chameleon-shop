<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopBundle\Entity\ShopOrder\shopOrderStatus" table="shop_order_status">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <many-to-one field="ShopOrder" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopOrder\shopOrder" inversed-by="ShopOrderStatusCollection" >
    <options>
        <option name="comment">Belongs to order</option>
    </options>
        <join-column name="shop_order_id" referenced-column-name="id" />
</many-to-one>
            <field name="StatusDate" type="datetime" column="status_date" nullable="false" >
    <options>
        <option name="comment">Date</option>
        <option name="default"></option>    </options>
</field>
            <many-to-one field="ShopOrderStatusCode" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopOrder\shopOrderStatusCode">
    <join-column name="shop_order_status_code_id" referenced-column-name="id" />
    <options>
        <option name="comment">Status code</option>
    </options>
</many-to-one>
            <field name="Data" type="object" column="data" nullable="false" >
    <options>
        <option name="comment">Data</option>
            </options>
</field>
            <field name="Info" type="text" column="info" nullable="false" >
    <options>
        <option name="comment">Additional info</option>
            </options>
</field>
            <one-to-many field="ShopOrderStatusItemCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopOrder\shopOrderStatusItem" mapped-by="ShopOrderStatus" orphan-removal="true">
    <options>
        <option name="comment">Order status items</option>
    </options>
    <cascade-persist/>
</one-to-many>

                <lifecycle-callbacks>
                                                                                                                                                                                            </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>