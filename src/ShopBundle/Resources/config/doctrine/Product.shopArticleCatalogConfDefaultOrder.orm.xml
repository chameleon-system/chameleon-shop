<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopBundle\Entity\Product\shopArticleCatalogConfDefaultOrder" table="shop_article_catalog_conf_default_order">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <many-to-one field="ShopArticleCatalogConf" target-entity="\ChameleonSystem\ShopBundle\Entity\Product\shopArticleCatalogConf" inversed-by="ShopArticleCatalogConfDefaultOrderCollection" >
    <options>
        <option name="comment">Belongs to configuration</option>
    </options>
        <join-column name="shop_article_catalog_conf_id" referenced-column-name="id" />
</many-to-one>
            <field name="Name" type="string" column="name" length="255" nullable="false" >
    <options>
        <option name="comment">Name (description)</option>
        <option name="default"></option>    </options>
</field>
            <many-to-one field="ShopModuleArticlelistOrderby" target-entity="\ChameleonSystem\ShopBundle\Entity\ProductList\shopModuleArticlelistOrderby">
    <join-column name="shop_module_articlelist_orderby_id" referenced-column-name="id" />
    <options>
        <option name="comment">Sorting</option>
    </options>
</many-to-one>
            <many-to-many field="ShopCategoryCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopCore\shopCategory">
    <join-table name="shop_article_catalog_conf_default_order_shop_category_mlt">
        <join-columns>
            <join-column name="source_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
            <join-column name="target_id" referenced-column-name="id"/>
        </inverse-join-columns>
    </join-table>
    <options>
        <option name="comment">Category</option>
    </options>
</many-to-many>
                <lifecycle-callbacks>
                                                                                                                                    </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>