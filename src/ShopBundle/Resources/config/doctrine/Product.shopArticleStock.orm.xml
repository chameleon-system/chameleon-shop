<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopBundle\Entity\Product\shopArticleStock" table="shop_article_stock">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <one-to-one field="ShopArticle" target-entity="\ChameleonSystem\ShopBundle\Entity\Product\shopArticle" inversed-by="ShopArticleStockCollection">
    <options>
        <option name="comment">Belongs to</option>
    </options>
    <join-column name="shop_article_id" referenced-column-name="id" />
</one-to-one>
            <field name="Amount" type="integer" column="amount" nullable="false" >
    <options>
        <option name="comment">Amount</option>
        <option name="default"></option>    </options>
</field>
                <lifecycle-callbacks>
                                                                            </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>