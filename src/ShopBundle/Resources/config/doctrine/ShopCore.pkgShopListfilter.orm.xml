<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopBundle\Entity\ShopCore\pkgShopListfilter" table="pkg_shop_listfilter">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <field name="Name" type="string" column="name" length="255" nullable="false" >
    <options>
        <option name="comment">Name</option>
        <option name="default"></option>    </options>
</field>
            <field name="Title" type="string" column="title" length="255" nullable="false" >
    <options>
        <option name="comment">Title to be shown on top of the filter on the website</option>
        <option name="default"></option>    </options>
</field>
            <field name="Introtext" type="text" column="introtext" nullable="false" >
    <options>
        <option name="comment">Description text shown on top of the filter</option>
            </options>
</field>
            <one-to-many field="PkgShopListfilterItemCollection" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopCore\pkgShopListfilterItem" mapped-by="PkgShopListfilter" orphan-removal="true">
    <options>
        <option name="comment">List filter entries</option>
    </options>
    <cascade-persist/>
</one-to-many>

                <lifecycle-callbacks>
                                                                                                                                    </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>