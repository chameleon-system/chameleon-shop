<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\ShopWishlistBundle\Entity\pkgShopWishlist" table="pkg_shop_wishlist">
        <id name="id" type="string" length="36" column="id" unique="true" />
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
            <many-to-one field="DataExtranetUser" target-entity="\ChameleonSystem\ExtranetBundle\Entity\dataExtranetUser" inversed-by="PkgShopWishlistCollection" >
    <options>
        <option name="comment">Belongs to user</option>
    </options>
        <join-column name="data_extranet_user_id" referenced-column-name="id" />
</many-to-one>
            <field name="Description" type="text" column="description" nullable="false" >
    <options>
        <option name="comment">Description stored by the user</option>
            </options>
</field>
            <field name="IsPublic" type="boolean" column="is_public" nullable="false">
    <options>
        <option name="comment">Public</option>
        <option name="default">0</option>    </options>
</field>
            <one-to-many field="PkgShopWishlistArticleCollection" target-entity="\ChameleonSystem\ShopWishlistBundle\Entity\pkgShopWishlistArticle" mapped-by="PkgShopWishlist" orphan-removal="true">
    <options>
        <option name="comment">Wishlist articles</option>
    </options>
    <cascade-persist/>
</one-to-many>

            <one-to-many field="PkgShopWishlistMailHistoryCollection" target-entity="\ChameleonSystem\ShopWishlistBundle\Entity\pkgShopWishlistMailHistory" mapped-by="PkgShopWishlist" orphan-removal="true">
    <options>
        <option name="comment">Wishlist mail history</option>
    </options>
    <cascade-persist/>
</one-to-many>

                <lifecycle-callbacks>
                                                                                                                                                                </lifecycle-callbacks>
        
    </entity>

</doctrine-mapping>