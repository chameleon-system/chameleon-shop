<doctrine-mapping xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="ChameleonSystem\SearchBundle\Entity\ShopSearchKeywordArticle" table="shop_search_keyword_article">
        <id name="id" type="string" length="36" column="id" unique="true"/>
        <field name="cmsident" type="integer" column="cmsident" unique="true">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>
        <many-to-one field="shop" target-entity="\ChameleonSystem\ShopBundle\Entity\ShopCore\Shop"
                     inversed-by="shopSearchKeywordArticleCollection">
            <options>
                <option name="comment">Belongs to shop</option>
            </options>
            <join-column name="shop_id" referenced-column-name="id"/>
        </many-to-one>
        <many-to-one field="cmsLanguage" target-entity="\ChameleonSystem\DataAccessBundle\Entity\Core\CmsLanguage">
            <join-column name="cms_language_id" referenced-column-name="id"/>
            <options>
                <option name="comment">Language</option>
            </options>
        </many-to-one>
        <field name="name" type="string" column="name" length="255" nullable="false">
            <options>
                <option name="comment">Keyword</option>
                <option name="default"></option>
            </options>
        </field>
        <many-to-many field="shopArticleCollection"
                      target-entity="\ChameleonSystem\ShopBundle\Entity\Product\ShopArticle">
            <join-table name="shop_search_keyword_article_shop_article_mlt">
                <join-columns>
                    <join-column name="source_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="target_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
            <options>
                <option name="comment">Articles</option>
            </options>
        </many-to-many>
        <lifecycle-callbacks>
        </lifecycle-callbacks>

    </entity>

</doctrine-mapping>